<h1><%= @task.title %></h1>
<div class="card">
  <h2><%= @task.details %></h2>
  <p><%= render 'icon', checked: @task.completed %><%= @task.completed ? "This task is completed." : "This task is not completed yet."  %></p>
  <p><%= link_to '✏️', edit_task_path(@task)  %></p>
  <p><%= link_to '🗑', task_path(@task), method: :delete, data: { comfirm: 'Are you sure?'}%></p>
  <p><%= link_to "Back to list", tasks_path %></p>

</div>
